@model IEnumerable<BabyShop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top: 85px;">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Catalog.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thumbnail.Link1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgeMax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Catalog.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thumbnail.Link1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgeMin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgeMax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
